<div id="task_<%= task.id %>">
  <div id="task_<%= task.id %>_head" class="task_head">
    <h2><%=task.id%>: <%= task.title %> Priority:<%= task.priority %>
     <%= link_to image_tag("left-arrow.png"), "#task_#{task.id}_body", class: "task_head_button open" %><%= link_to task.status == "open" ? "Close" : "Open", task_path(task), method: "delete", remote:true %></h2>
   
   
  </div>
  <div id="task_<%= task.id %>_body" class="task_body hidden">
    <% if task.body != ""  %>
      <p><%= task.body %></p>
    <% else  %>
      <p>No body home, come back later</p>
    <% end  %>
    <% if task.status == "open"  %>
      <%= link_to "Edit", edit_task_path(task), remote:true %>
    <% end  %>
    <div id="comments">
      <%= task.comments.each do |comment|%>
        <%= render partial: "comments/display", locals: {comment: comment} %>
      <% end  %>
    </div>
    <div id="comment_form">
      
  </div>
</div>